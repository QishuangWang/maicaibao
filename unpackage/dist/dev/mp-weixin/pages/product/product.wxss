.flcart-f2 {
	height: 100rpx;
}
.flcart-f1 {
	width: 132rpx;
	display: inline-block;

	line-height: 50rpx;
	font-size: 14px;
}
.flcart-f2 {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	line-height: 100rpx;
