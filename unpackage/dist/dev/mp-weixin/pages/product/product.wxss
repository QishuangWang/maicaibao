
.flcart {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	position: fixed;
	left: 0rpx;
	right: 0rpx;
	bottom: 0rpx;
	font-size: 14px;
	line-height: 1.2;
